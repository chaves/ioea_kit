{
	"name": "ioea-sveltekit",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"prebuild": "prisma generate && (npx tsx scripts/generate-program-image.ts all || echo 'PDF conversion skipped (tools not available)')",
		"build": "vite build",
		"preview": "vite preview",
		"start": "node server.js",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"generate-placeholders": "node scripts/generate-placeholders.js",
		"generate-images": "npx tsx scripts/generate-program-image.ts all"
	},
	"devDependencies": {
		"@sveltejs/adapter-auto": "^7.0.0",
		"@sveltejs/adapter-node": "^5.4.0",
		"@sveltejs/kit": "^2.48.5",
		"@sveltejs/vite-plugin-svelte": "^6.2.1",
		"@types/nodemailer": "^7.0.4",
		"autoprefixer": "^10.4.22",
		"postcss": "^8.5.6",
		"sharp": "^0.34.5",
		"svelte": "^5.43.8",
		"svelte-check": "^4.3.4",
		"tailwindcss": "^3.4.17",
		"tsx": "^4.19.2",
		"typescript": "^5.9.3",
		"vite": "^7.2.2"
	},
	"dependencies": {
		"@prisma/adapter-mariadb": "^7.0.1",
		"@prisma/client": "^6.19.0",
		"@types/bcryptjs": "^2.4.6",
		"bcryptjs": "^3.0.3",
		"dotenv": "^17.2.3",
		"marked": "^17.0.3",
		"mysql2": "^3.15.3",
		"nodemailer": "^7.0.11",
		"prisma": "^6.19.0",
		"xlsx": "^0.18.5"
	}
}
